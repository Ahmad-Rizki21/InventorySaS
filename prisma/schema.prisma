generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String       @id @default(uuid())
  sku       String       @unique
  name      String
  category  String // "Active", "Passive", "Tool"
  unit      String // "Pcs", "Meter", "Lot"
  items     ItemDetail[]
  stocks    Stock[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model ItemDetail {
  id           String   @id @default(uuid())
  productId    String
  serialNumber String   @unique
  macAddress   String?  @unique
  status       Status   @default(GUDANG)
  lastKnownLat Float?
  lastKnownLng Float?
  notes        String?
  product      Product  @relation(fields: [productId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Stock {
  id          String   @id @default(uuid())
  productId   String
  warehouseId String   @default("WH-001")
  quantity    Float
  product     Product  @relation(fields: [productId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([warehouseId])
}

enum Status {
  GUDANG
  TERPASANG
  RUSAK
  TEKNISI
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique // ADMIN, GUDANG, TEKNISI
  permissions Json         
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  name          String
  password      String
  roleId        String        @db.VarChar(191)
  role          Role          @relation(fields: [roleId], references: [id])
  activityLogs  ActivityLog[]
  refreshTokens RefreshToken[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model ActivityLog {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  action      String   // LOGIN, LOGOUT, CREATE_PRODUCT, UPDATE_PRODUCT, DELETE_PRODUCT, STOCK_IN, STOCK_OUT, CHANGE_PASSWORD, etc.
  description String
  entity      String?  // ENTITY_TYPE (PRODUCT, ITEM, STOCK)
  entityId    String?  // ID of the entity that was modified
  metadata    String?  @db.Text // JSON string for additional data
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([entity, entityId]) // Index for efficient querying by entity and entity ID
  @@index([createdAt])
}

model RefreshToken {
  id           String   @id @default(uuid())
  token        String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  revokedAt    DateTime?
  ipAddress    String?
  userAgent    String?

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}